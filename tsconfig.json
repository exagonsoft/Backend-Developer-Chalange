{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@models/*": [
        "src/database/models/*"
      ],
      "@services/*": [
        "src/services/*"
      ],
      "@interfaces/*": [
        "src/interfaces/*"
      ]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.js"],
  "exclude": [
    "node_modules",
    "dist"
  ]
}